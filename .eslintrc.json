{
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "plugins": [
        "meteor",
        "react"
    ],
    "extends": [
        "airbnb",
        "plugin:meteor/recommended"
    ],
    "rules": {
        "meteor/eventmap-params": [
            2,
            {
                "templateInstanceParamName": "instance"
            }
        ],
        "import/no-unresolved": [
            2,
            {
                "ignore": [
                    "^meteor/"
                ]
            }
        ]
    }
}
